<?xml version="1.0" encoding="utf-8"?>
<shape
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:shape="rectangle">
	<!-- Màu nền-->
	<solid	
	    android:color="#8DB6FA" />
	<!-- Màu và độ rộng của đường viền -->
	<stroke
		android:width="1dp"
		android:color="#0101DF" >
	</stroke>		
	<!-- Các thuộc tính căn chỉnh-->
	<padding
		android:left="0dp"
		android:top="0dp"
		android:right="0dp"
		android:bottom="0dp" >
	</padding>		
	<!-- Bán kính đường tròn ở 4 góc -->
	<corners
		android:radius="10dp" >
	</corners>
</shape>